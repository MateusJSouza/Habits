// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String          @id @default(uuid()) // preenche o id automaticamente com o UUID
  title      String
  created_at DateTime
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime
  dayHabits DayHabit[]

  @@unique([date]) // cada registro dentro da tabela day precisa ter o campo date único
  @@map("days") // renomeando o nome da tabela para days
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit   Habit  @relation(fields: [habit_id], references: [id])
  habitId String

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

// Tabela pivô -> N para N
model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id]) // não posso ter o mesmo hábito completado duas vezes no mesmo dia
  @@map("day_habits")
}
